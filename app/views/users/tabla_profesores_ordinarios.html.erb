
<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
            <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"> <b>Profesores ordinarios por área de investigación y estatus</b></h3>
            </div>
              <div class="panel-body">

<br/><br/>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-1">
                <button class="btn btn-success" type="button">
                 <b> Cantidad de profesores del IDEC </b><span class="badge"><%=@resultados %></span>
                </button>
               
            </div>    
              <div class="col-lg-4 col-lg-offset-1">    
                  <ul class="nav nav-tabs nav-justified">
                  
                  <% if @users2.blank? %>
                        <li role="presentation"><%= link_to "GENERAR DOCUMENTO (PDF)", herramientas_tabla_profesores_ordinarios_path(@users2, :format => 'pdf'), :class=> 'btn btn-info  active' , disabled: true %></li>
                      <%else%>
                         <li role="presentation"><%= link_to "GENERAR DOCUMENTO (PDF)", herramientas_tabla_profesores_ordinarios_path(@users2, :format => 'pdf'), :class=> 'btn btn-info  active' %></li>
                      <% end %>
                       
                </ul>
              </div>
          </div>
          
                <br/><br/>
          <div class="row">
            <div class="col-lg-7 col-lg-offset-3">
            <%= paginate @users, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-md pagination-centered" %>
            </div>
            </div>

            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 ">   
                  

                    <table class="table table-hover table-striped">
                      <thead>
                        <tr>
                        <td ><strong> # </strong></td>
                         <th style="width: 40%">Profesores</th>
                          <th style="width: 35%">Unidad/Área</th>
                          <th style="width: 30%">Estatus</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @users.each do |user| %>
                          <tr>
                            <td><%= @numero=@numero+1%></td>
                            <td><%= user.nombre_apellido %></td>
                            <td><%= user.area %></td>
                             <td><%= user.estatus_user %></td>

                          </tr>
                            
                        <% end %>
                      </tbody>
                    </table>
                    <br/>
          <div class="row">
            <div class="col-lg-7 col-lg-offset-3">
            <%= paginate @users, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-md pagination-centered" %>
            </div>
            </div>

                    <br> 

               <div class="row">
                  <div class="col-lg-6 col-lg-offset-5">
                  <%= link_to 'Regresar', herramientas_tablas_path , :class=> 'btn btn-success btn-md active'%>
                         &nbsp;&nbsp;&nbsp;
                   </div>
                </div>
               <br/>
            </div>
            </div>

            </div>
    </div>
    


  </div>
</div>