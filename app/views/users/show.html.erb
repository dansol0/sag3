
<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
      <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"> <b>Información del Investigador</b></h3>
              </div>
         <div class="panel-body">

                <br/>
            
               <dl class="dl-horizontal">
                    <dt><strong>Cedula:</strong></dt>
                    <dd> <%= @user.id %></dd>
                    <br/>
                    <dt><strong>Primer Nombre:</strong></dt>
                    <dd><%= @user.nombre1 %></dd>
                    <br/>
                    <dt><strong>Segundo Nombre:</strong></dt>
                    <dd> <%= @user.nombre2 %></dd>
                    <br/>
                    <dt><strong>Primer Apellido:</strong></dt>
                    <dd> <%= @user.apellido1 %></dd>
                    <br/>
                    <dt><strong>Segundo Apellido:</strong></dt>
                    <dd><%= @user.apellido2 %></dd>
                    <br/>
                    <dt><strong>Correo:</strong></dt>
                    <dd><%= @user.email %></dd>
                    <br/>
                    <dt><strong>Dirección:</strong></dt>
                    <dd><%= @user.direccion %></dd>
                    <br/>
                    <dt><strong>Teléfono:</strong></dt>
                    <dd><%= @user.tlf %></dd>
                    <br/>
                    <dt><strong>Rol:</strong></dt>
                    <dd><%= @user.rol %></dd>
                     <br/>
                    <dt><strong>Dedicación:</strong></dt>
                    <dd><%= @user.dedicacion %></dd>
                     <br/>
                    <dt><strong>Cargo:</strong></dt>
                    <dd><%= @user.cargo %></dd>
                     <br/>
                     <dt><strong>Estatus:</strong></dt>
                    <dd><%= @user.estatus_user %></dd>
                    <br/>
                    <dt><strong>Área:</strong></dt>
                    <dd><%= @user.area %></dd>
                    <br/>
                    <dt><strong>Categoria Actual:</strong></dt>
                    <dd><%= @user.categoria_actual %></dd>
                     <br/>
                    <dt><strong>Años de Servicio:</strong></dt>
                    <dd><%= @user.anos_serv %></dd>

                    <br/>
                    <dt><strong>Adscrito:</strong></dt>
                    <dd><%= @user.adscrito %></dd>
                     <br/>
                    <dt><strong>Fecha Último Ascenso:</strong></dt>
                    <dd><%= @user.fecha_ult_ascenso %></dd>
                     <br/>
                    <dt><strong>Grado Académico:</strong></dt>
                    <dd><%= @user.grado_academico %></dd>
                  </dl>
                 
                 
                  <br/> 

                     
                     <div class="row">
                      <div class="col-lg-5 col-lg-offset-4"> 
                         <%= link_to 'Regresar', usuarios_listar_path , :class=> 'btn btn-primary  active'%>
                         &nbsp;&nbsp;&nbsp;
                         <%= link_to 'Editar', modificar_usuario_path(@user) , :class=> 'btn btn-success btn-lg active'%>
                         &nbsp;&nbsp;&nbsp;
                         <%= link_to 'Eliminar', @user, method: :delete, data: { confirm: '¿Esta seguro que desea eliminar la actividad?' }, :class=> 'btn btn-primary  active'%>
                       </div>
                     </div>
                  <br/> 
            
          </div><!-- panel-body  -->
      </div><!-- panel panel-primary  -->
    </div><!-- col-lg-12  -->
  </div>   <!-- row  --> 


       