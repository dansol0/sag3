
<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"> <b>Resumen totalizador de investigaciones</b></h3>
            </div>
              <div class="panel-body">

<br/>
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1">

                   <button class="btn btn-success" type="button">
                 <b> Cantidad total de proyectos  </b><span class="badge"><%=@resultados %></span>
                </button>
               
            </div>    
              <div class="col-lg-3 col-lg-offset-1">    
                  <ul class="nav nav-tabs nav-justified">
                  
                  
                         <li role="presentation"><%= link_to "GENERAR DOCUMENTO (PDF)", herramientas_tabla_resumen_totalizador_de_investigaciones_path(@cantidad_de_grupo, @cantidad_individual, :format => 'pdf'), :class=> 'btn btn-info  active' %></li>
                      
                       
                </ul>
              </div>
          </div>
          
                <br/>
         
          <div class="row">
              <div class="col-lg-4 col-lg-offset-4">   
                      

                        <table class="table table-hover table-striped table-bordered">
                          <thead>
                            <tr class="info">
                            <td style="width: 30%"><strong> CANTIDAD</strong></td>
                             <th style="width: 60%">ACTIVIDADES</th>
                             </tr>
                          </thead>

                          <tbody>
                            <tr>
                                <td><%= @cantidad_de_grupo%></td>
                                <td class="text-center">
                                    <div class="btn-group">
                                      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                       &nbsp;&nbsp; Proyectos de grupo&nbsp;&nbsp; <span class="caret"></span>
                                      </button>
                                      <ul class="dropdown-menu">
                                        <li><%= link_to "En desarrollo", herramientas_tabla_investigaciones_de_grupo_path%></li>
                                        <li role="separator" class="divider"></li>
                                        <li><%= link_to "En espera por aprobación", herramientas_tabla_investigaciones_de_grupo_en_espera_path%></li>
                                        <li role="separator" class="divider"></li>
                                        <li><%= link_to "Culminados", herramientas_tabla_investigaciones_de_grupo_culminados_path%></li>
                                      </ul>
                                    </div>
                                    </td>
                                 
                            </tr>
                            <tr>
                                <td><%= @cantidad_individual%></td>
                                 <td class="text-center">
                                    <div class="btn-group">
                                      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Proyectos individuales <span class="caret"></span>
                                      </button>
                                      <ul class="dropdown-menu">
                                        <li><%= link_to "En desarrollo", herramientas_tabla_investigaciones_individual_path%></li>
                                        <li role="separator" class="divider"></li>
                                        <li><%= link_to "En espera por aprobación", herramientas_tabla_investigaciones_individual_en_espera_path%></li>
                                        <li role="separator" class="divider"></li>
                                        <li><%= link_to "Culminados", herramientas_tabla_investigaciones_individual_culminados_path%></li>
                                      </ul>
                                    </div>
                                    </td>
                            </tr>
                                
                            
                          </tbody>
                        </table>
                    <br>   
                </div>
           


            <div class="row">
                  <div class="col-lg-6 col-lg-offset-5">
                  <%= link_to 'Regresar', herramientas_tablas_path , :class=> 'btn btn-success btn-md active'%>
                         &nbsp;&nbsp;&nbsp;
                   </div>
                </div>

            
            </div>

            </div>
    </div>
    


  </div>
</div>