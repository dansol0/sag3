<div class="row">

	
			<div class="col-lg-4 col-lg-offset-4 ">
				      <div class="panel panel-primary">
				              <div class="panel-heading">
				                <h1 class="panel-title text-center"> <b>INICIO DE SESIÓN</b></h1>
				              </div>
				         <div class="panel-body">

				          <br/>
				          

							<%= form_tag sessions_path do %>

								<div class="input-group col-lg-10 col-lg-offset-1">
									  <span class="input-group-addon" id="basic-addon1">C.I.</span>
									<%= number_field_tag :id, params[:id], min: 1000000, max: 30000000, :class => 'form-control', placeholder: "Cédula" %>
								 </div>
								 	<br/> 
								   <div class="input-group col-lg-10 col-lg-offset-1">
								  
									  <span class="input-group-addon glyphicon glyphicon-lock" id="basic-addon1"></span>
								    <%= password_field_tag :password, params[:password], :class => 'form-control', placeholder: "Contraseña" %>
								  </div>
								  <br/>
								  <div class="row">
								  	<div class="col-lg-10 col-lg-offset-1 ">	
									  <div class="field">
									    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
									    <%= label_tag :remember_me , "Recordarme"%>
									  </div>
									</div>
								  </div>
								  <div class="row">
								     
								      <div class="actions col-lg-3 col-lg-offset-3"> <%= submit_tag "Entrar", :class=> 'btn btn-success' %>  </div>
								      
								      <div class="actions col-lg-3 "> <%= submit_tag "Borrar",  type: :reset, :class=> 'btn btn-success' %>  </div>
								      </div>
								  </div>
							<% end %>
							<div class="row">
								<div class="col-lg-6 col-lg-offset-2">
								<%= link_to '¿Olvidó su contraseña?, Presione aquí', new_password_reset_path , :class=> 'btn btn-primary btn-xs active' %>
							</div>
							</div>
						<br/>
				</div>
						
		</div>
 
	 </div><!-- panel-body  -->
      </div><!-- panel panel-primary  -->
    </div><!-- col-lg-12  -->	
</div>
<br/> <br/>