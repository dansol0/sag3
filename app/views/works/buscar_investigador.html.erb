<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
      <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"> <b> Buscar por investigador: &nbsp;Jurado </b></h3>
              </div>
         <div class="panel-body">

                <br/>
                

     <%=bootstrap_form_tag url: docencia_trabajos_resultados_path do |f|%>

              <div class="row">
                  <div class="col-lg-8 col-lg-offset-2">   
                    <%= f.select :user_ids, options_from_collection_for_select(@users, :id, :nombre_apellido), label: "Seleccione un investigador:" %>
                    
                    </div>
              </div>
              <br/> 
             
              <%= f.hidden_field :opcion, :value => 1 , :class => 'form-control' %>
              <div class="row">
                  <div class="col-lg-6 col-lg-offset-4">
                  <%= link_to 'Regresar', docencia_trabajos_buscar_menu_path , :class=> 'btn btn-success btn-md active'%>
                         &nbsp;&nbsp;&nbsp;
              <%= f.submit "Buscar", :class => 'btn btn-success btn-md active'  %>
              </div>
              </div>
           <% end %>   
<br/>
        </div><!-- panel-body  -->
      </div><!-- panel panel-primary  -->
    </div><!-- col-lg-12  -->
  </div>   <!-- row  -->
