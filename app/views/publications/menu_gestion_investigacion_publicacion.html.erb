<%- model_class = Research -%>
 <div class="row">
	<div class="col-lg-12 ">
        		<div class="panel panel-primary">
					  <div class="panel-heading">
					    <h3 class="panel-title"> <b>Menu de gestión: &nbsp; Publicaciones </b></h3>
					  </div>
			  			<div class="panel-body">

<br/><br/>

			<div class="row ">
				 <div class="col-lg-10 col-lg-offset-1 ">
					<ul class="nav nav-tabs nav-justified">
					  <li role="presentation" > <%= link_to "CONSULTAR ACTIVIDADES", menu_investigacion_2_path, :class=> 'btn btn-info  active' %></li>
					  <li role="presentation"><%= link_to "CREAR ACTIVIDAD", investigacion_publicacion_resgistro_path, :class=> 'btn btn-info  active' %></li>
					  
					   <% if @publications.blank? %>
                         <li role="presentation"><%= link_to "GENERAR DOCUMENTO (PDF)", menu_investigacion_2_path(@publications, :format => 'pdf'), :class=> 'btn btn-info  active', disabled: true %></li>
                      <%else%>
                           <li role="presentation"><%= link_to "GENERAR DOCUMENTO (PDF)", menu_investigacion_2_path(@publications, :format => 'pdf'), :class=> 'btn btn-info  active' %></li>
                      <% end %>
                        
					</ul>
				  </div>
			  </div>
			  	
						<br/><br/>
						<div class="row">
				            <div class="col-md-3 col-md-offset-1">
				              
				                  <div class="alert alert-info" role="alert">
				                     <em><b> Actividades encontradas: &nbsp; <%=@resultados %> </b></em>
				                  </div>
				              </div> 
				            </div>
						<br/><br/>
					<div class="row">		
						<div class="col-md-5 col-md-offset-4">
							<div class="alert alert-info" role="alert">
							 <h6 class="text-center"><b> ACTIVIDADES REGISTRADAS EN EL PERIODO ACTUAL</b></h6>
							</div>
						</div>
				     </div>
			<div class="row">
            <div class="col-lg-7 col-lg-offset-3">
            <%= paginate @publications, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-md pagination-centered" %>
            </div>
            </div>
				<div class="row">		
						<div class="col-lg-12 ">
						        <div class="table-responsive">
								  				

						        		
											<table class="table table-striped">
											  <thead>
											    <tr>
											      <th><%= model_class.human_attribute_name("Id") %></th>
											      <th style="width: 70%"><%= model_class.human_attribute_name("Titulo") %></th>
											      <th><%= model_class.human_attribute_name("Fecha Inicio") %></th>
											      
											      <th><%=t '.actions', :default => t("helpers.Acción") %></th>
											    </tr>
											  </thead>
											  <tbody>
											   <br/>
					                          <% if @publications.blank? %>
					                            <h4> <b>&nbsp;&nbsp; No se encontro ninguna actividad para esta busqueda </b></h4>
					                            <br/>
					                          <%else%>
											    <% @publications.each do |publication| %>
											      <tr>
											        <td><%= link_to publication.id, publication_path(publication) %></td>
											        <td><%= publication.titulo %></td>
											        <td><%= publication.fecha_i %></td>
											        
											        <td>
											        
											          <%= link_to 'Mostrar', investigacion_publicacion_ver_path(publication) , :class=> 'btn btn-info btn-xs active'%>
										              <%= link_to 'Editar', investigacion_publicacion_modificar_path(publication) , :class=> 'btn btn-warning btn-xs active'%>
										               <%= link_to 'Eliminar', publication, method: :delete, data: { confirm: '¿Esta seguro que desea eliminar la actividad?' }, :class=> 'btn btn-danger btn-xs active'%>

											        </td>
											      </tr>
											    <% end %>
											    <%end%>
											  </tbody>
											</table>

			<div class="row">
            <div class="col-lg-7 col-lg-offset-3">
            <%= paginate @publications, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-md pagination-centered" %>
            </div>
            </div>




								</div>
						</div>

				</div>		


			  </div>
		</div>
		


	</div>
</div>