<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
      <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"> <b> Buscar por período: &nbsp;Académico administrativas</b></h3>
              </div>
         <div class="panel-body">

                <br/><br/>

      
       <%= bootstrap_form_tag url: academico_administrativo_resultados_path do |f| %>
             <div class="row">
                <div class="col-lg-5 col-lg-offset-3">
                  <%= f.number_field :ano_periodo,  min: 2015, max: 2040, help: "Elija un año desde 2015 en adelante", label: "Período", required: "true" %>
                </div>
              </div>    
              <br/>
            <div class="row">
                <div class="col-lg-5 col-lg-offset-3">   
                     <%= f.select :tipo, options_for_select(["", "Cargos de dirección", "Cargos de elección", "Comisiones", "Asignaciones especiales","Otro"]), { label: "Tipo de la actividad" }, { class: "selectpicker" } %>
                </div>

            </div>
           <%= f.hidden_field :user_id, :value => current_user.id, :class => 'form-control' %> 

            <%= f.hidden_field :opcion, :value => 3 , :class => 'form-control' %>        
                     
<br/><br/>
    			  <div class="actions">
            <div class="row">
                      <div class="col-lg-5 col-lg-offset-4"> 
                         <%= link_to 'Regresar', academico_administrativo_buscar_menu_path , :class=> 'btn btn-primary active'%>
                         &nbsp;&nbsp;&nbsp;
                          <%= submit_tag 'Buscar' , :class => 'btn btn-success btn-lg active' %>
                           &nbsp;&nbsp;&nbsp;
                          <%= submit_tag 'Borrar', type: :reset , :class => 'btn btn-primary active' %>
                       </div>
                </div>
              </div>
  		
         <% end %> 


          <br/>
          <br/>  

  
   </div><!-- panel-body  -->
      </div><!-- panel panel-primary  -->
    </div><!-- col-lg-12  -->
  </div>   <!-- row  -->              

  